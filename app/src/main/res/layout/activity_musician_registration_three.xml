<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.MusicianRegistrationThree"
    android:background="@drawable/bg_registration">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/header">

        <ImageView
            android:layout_width="@dimen/ta_logoWidth"
            android:layout_height="@dimen/ta_logoHeight"
            android:id="@+id/imageView"
            android:src="@drawable/logo2"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ta_stepThree"
            android:id="@+id/textView"
            style="@style/ta_bigTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ta_selectYourMusicStyles"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal" />

        <include layout="@layout/styles_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/header" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/ta_formViewVerticalGap">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="@string/ta_back"
            android:theme="@style/ta_buttonBack"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/ta_finish"
            android:theme="@style/ta_buttonFinish" />
    </LinearLayout>
</RelativeLayout>
