<resources>

    <!-- Base application theme. -->
    <style name="TocatappTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ta_center" parent="TocatappTheme">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ta_bigTitle" parent="ta_center">
        <item name="android:textSize">@dimen/ta_bigText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ta_mediumTitle" parent="ta_center">
        <item name="android:textSize">@dimen/ta_mediumText</item>
    </style>

    <style name="ta_inputView" parent="TocatappTheme">
        <item name="android:layout_marginTop">@dimen/ta_formViewVerticalGap</item>
        <item name="android:textSize">@dimen/ta_normalText</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ta_checkboxView" parent="TocatappTheme">
        <item name="android:layout_marginTop">@dimen/ta_formViewVerticalGap</item>
        <item name="android:textSize">@dimen/ta_normalText</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="ta_inputLabel" parent="TocatappTheme">
        <item name="android:textSize">@dimen/ta_normalText</item>
    </style>

    <style name="ta_discreteSeekBarStyle">
        <item name="dsb_progressColor">@color/colorDescreetBarProgress</item>
        <item name="dsb_indicatorTextAppearance">@color/colorDescreetBarText</item>
        <item name="dsb_indicatorColor">@color/colorDescreetBarBubble</item>
    </style>

    <style name="ta_buttonSuccess" parent="Theme.AppCompat.Light">
        <item name="android:colorControlHighlight">@color/colorHighlight</item>
        <item name="android:colorButtonNormal">@color/colorSuccess</item>
    </style>

    <style name="ta_buttonFinish" parent="Theme.AppCompat.Light">
        <item name="android:colorControlHighlight">@color/colorFinish</item>
        <item name="android:colorButtonNormal">@color/colorFinishHighlight</item>
    </style>

    <style name="ta_buttonBack" parent="Theme.AppCompat.Light">
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorButtonNormal">@color/colorDisabled</item>
    </style>

    <style name="ta_buttonCancel" parent="Theme.AppCompat.Light">
        <item name="android:colorControlHighlight">@color/colorHighlight</item>
        <item name="android:colorButtonNormal">@color/colorSuccess</item>
    </style>

    <style name="ta_congratulationsHeader" parent="ta_bigTitle">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/colorFinish</item>
    </style>

    <style name="ta_congratulationsMessage">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
